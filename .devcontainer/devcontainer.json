{
  "name": "Python & TypeScript Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_CACHE_DIR": "${containerWorkspaceFolder}/.cache/uv",
    "UV_LINK_MODE": "copy",
    "UV_COMPILE_BYTECODE": "1",
    "NODE_ENV": "development",
    "PRE_COMMIT_HOME": "${containerWorkspaceFolder}/.cache/pre-commit",
    // Ensure npm global installs are user-writable and take precedence in PATH
    "NPM_CONFIG_PREFIX": "/home/vscode/.npm-global",
    "PATH": "/home/vscode/.npm-global/bin:${containerEnv:PATH}",
    // Secure firewall policies on start (default: true)
    // Set to "false" to skip running .devcontainer/secure/init-firewall.sh
    "SECURE_MODE": "true"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "curl,wget,jq,ca-certificates,build-essential,ripgrep,iptables,ipset,aggregate,dnsutils"
    },
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "shellAutocompletion": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/shyim/devcontainers-features/bun:0": {}
  },
  "runArgs": ["--init", "--rm", "--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "hostRequirements": {
    "gpu": "optional"
  },
  "customizations": {
    "vscode": {
      "settings": {
        // Python settings
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",

        // TypeScript/JavaScript settings
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,
        "javascript.suggest.autoImports": true,

        // Editor settings
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },

        // File associations
        "files.associations": {
          "*.json": "jsonc"
        },

        // Terminal settings
        "terminal.integrated.defaultProfile.linux": "zsh",

        // Multi-language support
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      },
      "extensions": [
        // Python development
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",

        // TypeScript/JavaScript development
        "ms-vscode.vscode-typescript-next",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "biomejs.biome",
        "bradlc.vscode-tailwindcss",

        // General development
        "eamodio.gitlens",
        "tamasfe.even-better-toml",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-json",

        // Text and documentation
        "textlint.textlint",

        // Additional utilities
        "usernamehw.errorlens",
        "gruntfuggly.todo-tree"
      ]
    }
  },
  "mounts": [
    "source=claude-code-config,target=/home/vscode/.claude,type=volume",
    "source=python-cache,target=/home/vscode/.cache,type=volume"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": ".devcontainer/scripts/postCreateCommand.sh",
  "postStartCommand": "bash -lc 'if [ \"${SECURE_MODE}\" = \"true\" ]; then sudo .devcontainer/secure/init-firewall.sh; else echo Secure mode disabled; fi'"
}
