{
  "name": "claude-code-polyglot-starter",
  "version": "0.0.1",
  "description": "Modern full-stack development environment with Python + TypeScript",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "dev:frontend": "cd frontend && bun dev",
    "dev:backend": "cd backend && uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "./scripts/build.sh",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && uv sync --frozen",
    "lint": "./scripts/lint.sh",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && uv run ruff check .",
    "lint:fix": "./scripts/lint-fix.sh",
    "lint:fix:frontend": "cd frontend && bun run lint:fix",
    "lint:fix:backend": "cd backend && uv run ruff check . --fix",
    "lint:text": "textlint '**/*.{md,html}'",
    "lint:text:fix": "textlint --fix '**/*.{md,html}'",
    "format": "./scripts/format.sh",
    "format:frontend": "cd frontend && bun prettier --write .",
    "format:backend": "cd backend && uv run ruff format .",
    "test": "./scripts/test.sh",
    "test:frontend": "cd frontend && bun run test --run",
    "test:backend": "cd backend && uv run pytest",
    "clean": "./scripts/clean.sh",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint": "^9.14.0",
    "prettier": "^3.1.0",
    "textlint": "^13.4.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-plugin-html": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.41.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-code-polyglot-starter"
  },
  "keywords": [
    "typescript",
    "python",
    "fastapi",
    "react",
    "vite",
    "devcontainer",
    "claude-code",
    "full-stack",
    "monorepo"
  ],
  "author": "Developer <developer@example.com>",
  "license": "MIT"
}
