{
  "name": "claude-code-polyglot-starter",
  "version": "0.0.1",
  "description": "Claude Code AI-powered full-stack development template with Python + TypeScript",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "dev:docker": "./scripts/dev-docker.sh",
    "dev:frontend": "cd \"${PWD}/frontend\" && bun dev",
    "dev:backend": "cd \"${PWD}/backend\" && uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:streamlit": "cd \"${PWD}/backend\" && echo '' | uv run streamlit run \"${PWD}/streamlit/app.py\" --server.port 8501 --server.address 0.0.0.0 --browser.gatherUsageStats false",
    "build": "./scripts/build.sh",
    "build:frontend": "cd \"${PWD}/frontend\" && bun run build",
    "build:backend": "cd \"${PWD}/backend\" && uv sync --frozen",
    "build:streamlit": "cd \"${PWD}/backend\" && uv sync --frozen",
    "lint": "./scripts/lint.sh",
    "lint:frontend": "cd \"${PWD}/frontend\" && bun run lint",
    "lint:backend": "cd \"${PWD}/backend\" && uv run ruff check .",
    "lint:streamlit": "cd \"${PWD}/backend\" && uv run ruff check ../streamlit",
    "lint:fix": "./scripts/lint-fix.sh",
    "lint:fix:frontend": "cd \"${PWD}/frontend\" && bun run lint:fix",
    "lint:fix:backend": "cd \"${PWD}/backend\" && uv run ruff check . --fix",
    "lint:fix:streamlit": "cd \"${PWD}/backend\" && uv run ruff check ../streamlit --fix",
    "lint:text": "textlint '**/*.{md,html}'",
    "lint:text:fix": "textlint --fix '**/*.{md,html}'",
    "format": "./scripts/format.sh",
    "format:frontend": "cd \"${PWD}/frontend\" && bun prettier --write .",
    "format:backend": "cd \"${PWD}/backend\" && uv run ruff format .",
    "format:streamlit": "cd \"${PWD}/backend\" && uv run ruff format ../streamlit",
    "test": "./scripts/test.sh",
    "test:frontend": "cd \"${PWD}/frontend\" && bun run test --run",
    "test:backend": "cd \"${PWD}/backend\" && uv run pytest",
    "clean": "./scripts/clean.sh",
    "docker:build": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose build",
    "docker:up": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose up",
    "docker:down": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose down",
    "docker:dev": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose --profile dev up -d dev",
    "docker:dev:connect": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && ./scripts/docker-dev-connect.sh",
    "docker:dev:logs": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose --profile dev logs -f dev",
    "docker:dev:down": "export USER_ID=$(id -u) GROUP_ID=$(id -g) USER_NAME=$(id -un) && docker compose --profile dev down"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint": "^9.14.0",
    "prettier": "^3.1.0",
    "textlint": "^13.4.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-plugin-html": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.41.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-code-polyglot-starter"
  },
  "keywords": [
    "claude-code",
    "ai-development",
    "template",
    "typescript",
    "python",
    "fastapi",
    "react",
    "vite",
    "streamlit",
    "devcontainer",
    "full-stack",
    "monorepo",
    "tdd",
    "bdd"
  ],
  "author": "Developer <developer@example.com>",
  "license": "MIT"
}
